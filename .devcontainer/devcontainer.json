{
  "name": "dragon32-dev",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".",
    "args": {
      "XROAR_COMMIT": "master"
    }
  },
  "containerEnv": {
    "DISPLAY": "${localEnv:DISPLAY}"
  },
  "runArgs": [
    "--env",
    "DISPLAY=${localEnv:DISPLAY}",
    "--volume",
    "/tmp/.X11-unix:/tmp/.X11-unix",
    "--volume",
    "${localWorkspaceFolder}/roms:/home/dev/roms",
    "--volume",
    "${localWorkspaceFolder}/xroar.conf:/home/dev/.xroar/xroar.conf"
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.makefile-tools",
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {
      "installDirectlyFromGitHubRelease": false
    },
    "ghcr.io/devcontainers/features/sshd:1": {
      "version": "latest"
    }
  },
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/dev/.ssh,type=bind,readonly",
    "source=${localEnv:SSH_AUTH_SOCK},target=/tmp/ssh-auth-sock,type=bind"
  ],
  "remoteEnv": {
    "SSH_AUTH_SOCK": "/tmp/ssh-auth-sock"
  },
  "remoteUser": "dev",
  "overrideCommand": true,
  "init": true
}